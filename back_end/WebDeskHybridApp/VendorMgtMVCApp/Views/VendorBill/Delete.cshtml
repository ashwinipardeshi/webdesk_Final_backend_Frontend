@model VendorMgtMVCApp.ViewModels.VendorBillVM
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        Delete Vill Bill
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Dashboard"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Masters</a></li>
        <li class="active">Delete Vill Bill</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-10">
            <div class="box box-info">
                <form asp-action="Delete" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="box-body">
                        @if (ViewBag.Msg != null)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-check"></i> @ViewBag.Msg</h4>
                            </div>
                        }
                        @if (ViewBag.Err != null)
                        {
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <h4><i class="icon fa fa-ban"></i> @ViewBag.Err</h4>
                            </div>
                        }
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.DisplayNameFor(model => model.BillNo)
                        </div>
                        <div class="col-sm-4">
                            @(Model != null && !string.IsNullOrEmpty(Model.BillNo) ? Model.BillNo : "NA")
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Section)
                        </div>
                        <div class="col-sm-4">
                            @(Model != null && !string.IsNullOrEmpty(Model.Section) ? Model.Section : "NA")
                        </div>
                    </div>                  
                </div>
                <div class="box-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-success">Back</a>
                        <input type="submit" value="Delete" class="btn btn-danger pull-right" onclick="return confirm('Are you sure you want to delete this?')" />
                    </form>
                </div>
                </form>
            </div>
            </div>
        </div>
</section>
