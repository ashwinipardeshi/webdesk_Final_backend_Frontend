        $(document).ready(function () {
            $(function () {
                $('.datepicker').datepicker({
                    autoclose: true,
                    format: 'yyyy-mm-dd'
                })

                //$('#example1').DataTable();

                $('#example1').DataTable({
                    'order': [[0, 'desc']]
                });

                $('#InwardDataTable,#InvoiceDataTable,#SearchValuesDataTable').DataTable({
                    'columnDefs': [
                        {
                            'targets': 0,
                            'checkboxes': {
                                'selectRow': true
