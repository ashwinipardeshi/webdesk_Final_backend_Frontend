    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        @*<div id="loading"></div>*@
        <div class="ajax-loader">
            <img src="~/img/ajax-loader.gif" class="img-responsive" />
        </div>
        <header class="main-header">
            <a href="~/Home/Dashboard" class="logo">
                <span class="logo-mini"><b>VM</b></span>
                <span class="logo-lg">Vendor Management</span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/img/user.png" class="user-image" alt="Admin">
                                <span class="hidden-xs">Admin</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header" style="height:60px !important;">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <a href="~/Home/MyProfile" style="color:white !important;">My Profile</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="~/Home/ChangePassword" style="color:white !important;">Change Password</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="~/Logout" style="color:white !important;">Sign out</a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu" data-widget="tree">
                    <li>
                        <a href="~/Home/Dashboard">
                            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>Masters</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="~/VendorMaster/Index"><i class="fa fa-circle-o"></i>Vendor Master</a></li>
                            <li><a href="~/VendorBanksMaster/Index"><i class="fa fa-circle-o"></i>Vendor Banks</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-edit"></i> <span>Transactions</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="~/VendorBill/Index"><i class="fa fa-circle-o"></i>Vendor Bill</a></li>
                        </ul>
                    </li>
                 
                </ul>
            </section>
        </aside>

        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0
            </div>
            <strong>Copyright &copy; 2023-2024 <a href="http://www.akronsystems.com/" target="_blank">Akron Systems</a>.</strong> All rights
            reserved.
        </footer>
        <div class="control-sidebar-bg"></div>
    </div>
    @*<script src="~/js/jquery.min.js"></script>*@
    <script src="~/js/jquery-ui.min.js"></script>
    <script>$.widget.bridge('uibutton', $.ui.button);</script>
